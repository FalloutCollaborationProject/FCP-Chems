<Defs>

    <!--__________ Stimpaks __________-->

    <!-- Diluted Stimpak - Weakest version -->

    <HediffDef>
        <defName>FCP_Hediff_Diluted_Stimpak</defName>
        <hediffClass>HediffWithComps</hediffClass>
        <defaultLabelColor>(180,220,180)</defaultLabelColor>
        <label>diluted stimpak</label>
        <labelNoun>diluted stimpak</labelNoun>
        <description>A watered-down stimulation pack that provides minor healing over time.</description>
        <comps>
            <li Class="StimPacks.Comps.StimPackProp">
                <HealPermanentInjuries>false</HealPermanentInjuries>
                <HealMissingBodyParts>false</HealMissingBodyParts>
                <RemoveHediffWhenDone>True</RemoveHediffWhenDone>
                <ScaleHealedAmountWithTotalHitPoints>true</ScaleHealedAmountWithTotalHitPoints>
                <HealedAmount>10</HealedAmount>
                <TickMinimumBetweenHealing>35</TickMinimumBetweenHealing>
                <TickMaximumBetweenHealing>45</TickMaximumBetweenHealing>
            </li>
        </comps>
    </HediffDef>

