    <!--__________ Rad-X __________-->

    <!-- Rad-X Effect Hediff -->

    <HediffDef>
        <defName>FCP_RadXHigh</defName>
        <label>Rad-X</label>
        <description>Rad-X is providing protection against radiation and toxic contamination by altering cellular structure. Side effects include minor disorientation and reduced reflexes.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <defaultLabelColor>(1,0.5,0.2)</defaultLabelColor>
        <scenarioCanAdd>true</scenarioCanAdd>
        <maxSeverity>1.0</maxSeverity>
        <isBad>false</isBad>
        <comps>
            <li Class="HediffCompProperties_Disappears">
                <disappearsAfterTicks>30000</disappearsAfterTicks> <!-- ~12.5 hours -->
                <showRemainingTime>true</showRemainingTime>
            </li>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-0.3</severityPerDay> <!-- Gradually reduces itself -->
            </li>
        </comps>
        <stages>
            <li>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.05</offset>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>-0.05</offset>
                    </li>
                </capMods>
                <statOffsets>
                    <ToxicResistance>0.50</ToxicResistance>
                    <ToxicEnvironmentResistance>0.50</ToxicEnvironmentResistance>
                </statOffsets>
            </li>
        </stages>
    </HediffDef>

    <!--__________ Rad-Away __________-->

    <!-- Rad-Away Effect Hediff -->

    <HediffDef>
        <defName>FCP_RadawayHigh</defName>
