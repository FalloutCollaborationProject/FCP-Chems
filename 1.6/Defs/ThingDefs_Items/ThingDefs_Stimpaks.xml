<Defs>

    <!--__________ Stimpaks __________-->

    <!-- Diluted Stimpak -->

    <ThingDef ParentName="MakeableDrugBase">
        <defName>FCP_Diluted_Stimpak</defName>
        <label>diluted stimpak</label>
        <description>A watered-down stimulation delivery system that provides minor healing over time. Common among wasteland scavengers due to its lower cost and availability.</description>
        <descriptionHyperlinks>
            <HediffDef>FCP_Hediff_Diluted_Stimpak</HediffDef>
        </descriptionHyperlinks>
        <graphicData>
            <texPath>Chems/Stimpaks/Diluted_Stimpak/FCP_Diluted_Stimpak</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <rotatable>false</rotatable>
        <statBases>
            <WorkToMake>600</WorkToMake>
            <MarketValue>40</MarketValue>
            <Mass>0.05</Mass>
        </statBases>
        <techLevel>Industrial</techLevel>
        <ingestible>
            <foodType>Processed</foodType>
            <baseIngestTicks>60</baseIngestTicks>
            <nurseable>true</nurseable>
            <drugCategory>Medical</drugCategory>
            <ingestSound>Ingest_Inject</ingestSound>
            <ingestHoldOffsetStanding>
                <northDefault>
                    <offset>(0.18,0,0)</offset>
                </northDefault>
            </ingestHoldOffsetStanding>
            <ingestCommandString>Use {0}</ingestCommandString>
            <ingestReportString>Using {0}.</ingestReportString>
            <useEatingSpeedStat>false</useEatingSpeedStat>
            <outcomeDoers>
                <li Class="IngestionOutcomeDoer_GiveHediff">
                    <hediffDef>FCP_Hediff_Diluted_Stimpak</hediffDef>
                    <severity>1.0</severity>
                </li>
            </outcomeDoers>
        </ingestible>
        <recipeMaker>
            <researchPrerequisite>FCP_Research_Medicinal_Drugs</researchPrerequisite>
            <recipeUsers>
                <li>FCP_Production_Chemistry_Workbench</li>
            </recipeUsers>
            <soundWorking>Recipe_Drug</soundWorking>
        </recipeMaker>
        <costList>
            <MedicineHerbal>1</MedicineHerbal>
            <Neutroamine>1</Neutroamine>
        </costList>
        <comps>
            <li Class="FCP.Core.CompProperties_LabelColored">
                <rarity>Common</rarity>
            </li>
            <li Class="CompProperties_Drug">
                <listOrder>1000</listOrder>
            </li>
        </comps>
    </ThingDef>

